<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yukiat.alarm.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set alarm"
        android:id="@+id/alarm_on"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Setup Bluetooth Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDeviceListButton"
        android:onClick="toDeviceList"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stop the alarm tone"
        android:id="@+id/stopRingtone"
        android:clickable="true"
        android:layout_below="@+id/alarm_on"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <Button
        android:text="Clear all existing alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelAlarms"
        android:layout_above="@+id/toDeviceListButton"
        android:layout_alignLeft="@+id/stopRingtone"
        android:layout_alignStart="@+id/stopRingtone"
        android:layout_marginBottom="99dp" />

</RelativeLayout>
